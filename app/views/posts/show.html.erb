<%# /courses/:course_id/posts/:post_id %>

<div class="page">
  <h1 id="post-heading"><%= @post.title %></h1>
  <p id="subheading">Last updated on <%= @post.updated_at.strftime("%D") %></p>
  <hr style="width:50%">
  <div class="button-panel">
    <%= link_to "Back to Course", course_url(@course), class: "p-button" %>
    <% if @post.course.user_id == session[:user_id] %>
      <%= link_to "Edit Post", edit_course_post_url(@course, @post), class: "p-button" %>
    <% end %>
    <%= link_to course_post_url(@course, @post, format: :rtf), class: "p-button" do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-download" viewBox="0 0 16 16">
      <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z"/>
      <path d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3z"/>
    </svg>
    <% end %>
  </div>
  <div id="post-content">
    <%= @post.content %>
  </div>
</div>

<%= render "comments_form" %>



