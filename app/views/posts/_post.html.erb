<%# Individual post (/courses/:id/posts ) %>
<div id="<%= dom_id(post) %>" class="post" onclick="location.href='<%= disabled ? 'javascript:void(0)' : course_post_path(post.course_id, post.id) %>';">
  <div class="inner-post">
   
    <% if editing %>
      <%= button_to course_post_path(@course, post), method: :delete, class: "danger" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">
          <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
        </svg>
      <% end %>
      <h3><%= link_to post.title, course_post_path(@course, post), style: "color: black" %></h3>
    <% else %>
      <h3><%= post.position %> - <%= post.title %></h3>
    <% end %>

    <% if post.content.to_plain_text.length > 100 %>
      <p><%= post.content.to_plain_text[0...100] %>...</p>
    <% else %>
      <p><%= post.content.to_plain_text %></p>
    <% end %>
    
  </div>
</div>