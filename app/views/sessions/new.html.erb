<%# /login %>
<br>
<div class="field form-group col-md-4">
<%= form_tag sessions_url do %>
  <%= text_field_tag :username, nil, placeholder: "Username", class: "form-control" %>
  <%= password_field_tag :password, nil, placeholder: "Password", class: "form-control"  %>
  <%= submit_tag "Log In", class: "btn btn-primary btn-block"%>
</div>
<% end %>

<!-- check box. Remembers username -->
  <div class="form-check mb-2 mr-sm-2">
      <label class="form-check-label" for="inlineFormCheck">
        Remember me
      </label>
    <input class="form-check-input" type="checkbox" id="inlineFormCheck">
</div>
