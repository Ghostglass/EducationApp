<%# /courses/:id %>
<%= @course.title %>

<% if @course.user_id == session[:user_id] %>
  <%= link_to "Edit Course", edit_course_path %>
  <%= link_to "Add Post", new_course_post_path(@course) %>
<% else %>
  <% if @subscription.valid? %>
    <%= button_to 'Unsubscribe', course_subscription_path(@course, @subscription), method: :delete %>
  <% else %>
    <%= button_to "Subscribe",  course_subscriptions_path(@course, @subscription), method: :create %>
  <% end %>
<% end %>
<%= link_to "See Posts", course_posts_path(@course) %>